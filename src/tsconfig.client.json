{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["ES2015", "dom", "es5", "ES2015.Promise"],
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "../lib/client",
    "paths": {
      "_testing/*": ["./src/_testing/*"],
      "*": ["./src/components/*", "../libs/goustouicomponents/./*"],
      "actions": ["./src/actions/index.js"],
      "actions/*": ["./src/actions/*"],
      "apis/*": ["./src/apis/*"],
      "client/*": ["./src/client/*"],
      "components/*": ["./src/components/*"],
      "config/*": ["./src/config/*"],
      "containers/*": ["./src/containers/*"],
      "design-language": ["../libs/goustouicomponents/dist/design-language"],
      "fixtures": ["../tests/regression/fixtures"],
      "goustouicomponents": ["../libs/goustouicomponents/./main"],
      "hoc/*": ["./src/hoc/*"],
      "hooks/*": ["./src/hooks/*"],
      "jsdom": ["fallbacks/jsdom"],
      "layouts/*": ["./src/layouts/*"],
      "media/*": ["./src/media/*"],
      "middlewares/*": ["./src/middlewares/*"],
      "reducers/*": ["./src/reducers/*"],
      "routes": ["./src/routes/index.js"],
      "routes/*": ["./src/routes/*"],
      "selectors/*": ["./src/selectors/*"],
      "server": ["./server/*"],
      "styles/*": ["./src/styles/*", "../libs/goustouicomponents/dist/styles/*"],
      "utils/*": ["./src/utils/*"],
      "validations/*": ["./src/validations/*"],
      "zest": ["../libs/goustouicomponents/dist"]
    },    
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": []
  },
  "exclude": [
    "./**/node_modules",
    "./config",
    "./dist",
    "./jest",
    "./libs",
    "./libs/goustouicomponents/.github",
    "./libs/goustouicomponents/.storybook",
    "./libs/goustouicomponents/dist",
    "./libs/goustouicomponents/setup",
    "./public",
    "./scripts",
    "./server",
  ],
  "include": ["./"]
}
