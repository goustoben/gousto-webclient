{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../lib/tests",
    "lib": ["ES2015", "ES2015.Promise", "dom"],
    "downlevelIteration": true,
    "target": "ES2015",
    "noEmit": true
  },
  "exclude": [
    "./**/node_modules",
    "./config",
    "./dist",
    "./jest",
    "./node_modules",
    "./libs",
    "./libs/goustouicomponents/.github",
    "./libs/goustouicomponents/.storybook",
    "./libs/goustouicomponents/dist",
    "./libs/goustouicomponents/setup",
    "./public",
    "./scripts",
    "./server"
  ],
  "include": [
    "**/__tests__/**/*",
    "**/*.test.*",
    "./src/types/**/*",
    "**/__tests__/**/*.ts"
  ]
}
