{
  "apps": [
    {
      "name": "server",
      "script": "dist/server.js",
      "watch": true,
      "watch_options": {
        "usePolling": true
      },
      "merge_logs": true,
      "ignore_watch": [
        "node_modules",
        "test",
        "tests",
        "_coverage"
      ],
      "env": {
        "NODE_ENV": "local"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
