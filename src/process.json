{
  "apps": [
    {
      "name": "server",
      "script": "dist/server.js",
      "exec_mode": "cluster",
      "watch": true,
      "watch_options": {
        "usePolling": true
      },
      "merge_logs": true,
      "ignore_watch": [
        "node_modules",
        "test",
        "tests",
        "_coverage"
      ],
      "env": {
        "NODE_ENV": "local"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "error_file": "/var/log/pm2/server-outerr.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
    }
  ]
}