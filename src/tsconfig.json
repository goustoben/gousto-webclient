{
  "compilerOptions":{
     "target":"es6",
     "module": "es6",
     "moduleResolution": "node",
     "jsx": "react",
     "checkJs": false,
     "baseUrl":"./",
     "allowSyntheticDefaultImports": true,
     "outDir": "./dist",
     "allowJs": true,
     "paths":{
        "*": ["src/components/*", "libs/goustouicomponents/src/*"],
        "server": ["src/server/*"],
        "_testing/*": ["src/_testing/*"],
         "actions/*": ["src/actions/*"],
         "apis/*": ["src/apis/*"],
         "client/*": ["src/client/*"],
         "components/*": ["src/components/*"],
         "config/*": ["src/config/*"],
         "containers/*": ["src/containers/*"],
         "hoc/*": ["src/hoc/*"],
         "hooks/*": ["src/hooks/*"],
         "layouts/*": ["src/layouts/*"],
         "media/*": ["src/media/*"],
         "middlewares/*": ["src/middlewares/*"],
         "reducers/*": ["src/reducers/*"],
         "routes/*": ["src/routes/*"],
         "selectors/*": ["src/selectors/*"],
         "styles/*": ["src/styles/*", "libs/goustouicomponents/dist/styles/*",],
         "utils/*": ["src/utils/*"],
         "validations/*": ["src/validations/*"],
         "jsdom": ["fallbacks/jsdom"],
         "goustouicomponents": ["libs/goustouicomponents/src/main"],
         "design-language": ["libs/goustouicomponents/dist/design-language"],
         "zest": ["libs/goustouicomponents/dist"],
         "fixtures": ["../tests/regression/fixtures"],
     }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.js"],
  "exclude":[
     "node_modules",
     "dist",
     "public",
     "./**/__tests__",
     "./**/__regression__",
  ],
}
