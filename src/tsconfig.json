{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ES2015",
      "ES2015.Promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../lib/client",
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "_testing/*": [
        "./src/_testing/*"
      ],
      "*": [
        "./src/components/*",
        "./libs/goustouicomponents/./*"
      ],
      "actions": [
        "./src/actions/index.js"
      ],
      "actions/*": [
        "./src/actions/*"
      ],
      "apis/*": [
        "./src/apis/*"
      ],
      "client/*": [
        "./src/client/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "config/*": [
        "./src/config/*"
      ],
      "containers/*": [
        "./src/containers/*"
      ],
      "design-language": [
        "./libs/goustouicomponents/dist/design-language"
      ],
      "fixtures": [
        "../tests/regression/fixtures"
      ],
      "goustouicomponents": [
        "./libs/goustouicomponents/./main"
      ],
      "hoc/*": [
        "./src/hoc/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "jsdom": [
        "fallbacks/jsdom"
      ],
      "layouts/*": [
        "./src/layouts/*"
      ],
      "media/*": [
        "./src/media/*"
      ],
      "middlewares/*": [
        "./src/middlewares/*"
      ],
      "reducers/*": [
        "./src/reducers/*"
      ],
      "routes": [
        "./src/routes/index.js"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "selectors/*": [
        "./src/selectors/*"
      ],
      "server": [
        "./server/*"
      ],
      "styles/*": [
        "./src/styles/*",
        "./libs/goustouicomponents/dist/styles/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "validations/*": [
        "./src/validations/*"
      ],
      "zest": [
        "../libs/goustouicomponents/dist"
      ]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
